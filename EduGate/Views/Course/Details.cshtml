@model EduGate.Models.Course

@{
    ViewData["Title"] = Model.Title;
}
@{
    // Get the current student ID from session
    var studentId = Context.Session.GetInt32("StudentId");

    // Default button state
    string buttonText = "Enroll Now";
    string buttonClass = "btn-primary";
    bool isEnrolled = false;

    // Check if student is logged in and enrolled
    if (studentId.HasValue)
    {
        // This requires the controller to have loaded the student with EnrolledCourses included
        var student = ViewBag.CurrentStudent as EduGate.Models.Student;
        if (student != null && student.EnrolledCourses.Any(c => c.Id == Model.Id))
        {
            buttonText = "Continue Learning";
            buttonClass = "btn-success";
            isEnrolled = true;
        }
    }
    else
    {
        buttonText = "Login to Enroll";
    }
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Course")">Courses</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Course Main Content -->
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content("~/"+Model.ImageUrl)"
                         class="card-img-top"
                         alt="@Model.Title"
                         style="max-height: 400px; object-fit: cover;"
                         onerror="this.onerror=null; this.src='~/images/course-placeholder.jpg';">
                }
                else
                {
                    <img src="~/images/course-placeholder.jpg"
                         class="card-img-top"
                         alt="@Model.Title"
                         style="max-height: 400px; object-fit: cover;">
                }
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>
                    <p class="card-text text-muted">
                        <span class="badge bg-primary me-2">@Model.Category</span>
                        <span><i class="bi bi-eye"></i> @Model.Views views</span>
                    </p>
                    <hr />
                    <div class="course-description mt-4">
                        <h4>Course Description</h4>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>

                    <!-- Course Content / Syllabus -->
                    <div class="course-content mt-5">
                        <h4>Course Content</h4>
                        <div class="accordion mt-3" id="courseContentAccordion">
                            <!-- This would ideally be populated from your database with actual lesson content -->
                            <!-- Example accordion item -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Module 1: Introduction
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#courseContentAccordion">
                                    <div class="accordion-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-play-circle me-2"></i> Welcome to the Course
                                                </div>
                                                <span class="badge bg-light text-dark">15 min</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-file-text me-2"></i> Course Overview
                                                </div>
                                                <span class="badge bg-light text-dark">Reading</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- Example additional module -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Module 2: Core Concepts
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#courseContentAccordion">
                                    <div class="accordion-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-play-circle me-2"></i> Understanding the Basics
                                                </div>
                                                <span class="badge bg-light text-dark">25 min</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-play-circle me-2"></i> Advanced Techniques
                                                </div>
                                                <span class="badge bg-light text-dark">30 min</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-journal-check me-2"></i> Module Quiz
                                                </div>
                                                <span class="badge bg-light text-dark">Quiz</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reviews Section -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Student Reviews</h4>
                </div>
                <div class="card-body">
                    <!-- Review Form -->
                    <div class="mb-4 p-3 bg-light rounded">
                        <h5>Leave a Review</h5>
                        <form>
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <select class="form-select" id="rating">
                                    <option value="5">★★★★★ (5/5)</option>
                                    <option value="4">★★★★☆ (4/5)</option>
                                    <option value="3">★★★☆☆ (3/5)</option>
                                    <option value="2">★★☆☆☆ (2/5)</option>
                                    <option value="1">★☆☆☆☆ (1/5)</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="reviewText" class="form-label">Your Review</label>
                                <textarea class="form-control" id="reviewText" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                        </form>
                    </div>

                    <!-- Sample Reviews -->
                    <div class="review-list">
                        <div class="review-item border-bottom pb-3 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <h5 class="mb-0 me-2">John Doe</h5>
                                <div class="text-warning">★★★★★</div>
                            </div>
                            <p class="text-muted small">Posted on: January 15, 2025</p>
                            <p>This course exceeded my expectations! The content was well-structured and the instructor explained complex concepts in a way that was easy to understand.</p>
                        </div>
                        <div class="review-item">
                            <div class="d-flex align-items-center mb-2">
                                <h5 class="mb-0 me-2">Jane Smith</h5>
                                <div class="text-warning">★★★★☆</div>
                            </div>
                            <p class="text-muted small">Posted on: March 5, 2025</p>
                            <p>Great course overall. Some sections could have more depth, but I learned a lot and would recommend it to others interested in this topic.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Course Info Card -->
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Course Information</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Duration:</span>
                            <span>8 weeks</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Difficulty:</span>
                            <span>Intermediate</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Language:</span>
                            <span>English</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Certificate:</span>
                            <span>Yes</span>
                        </li>
                    </ul>
                    <div class="d-grid gap-2 mt-4">
                        @if (isEnrolled)
                        {
                            <a href="@Url.Action("Learn", "Course", new { id = Model.Id })" class="btn @buttonClass btn-lg">@buttonText</a>
                        }
                        else if (studentId.HasValue)
                        {
                            <form asp-action="Enroll" asp-controller="Course" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn @buttonClass btn-lg w-100">@buttonText</button>
                            </form>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account", new { returnUrl = Url.Action("Details", "Course", new { id = Model.Id }) })" class="btn @buttonClass btn-lg">@buttonText</a>
                        }
                        <button class="btn btn-outline-secondary">Add to Wishlist</button>
                    </div>
                </div>
            </div>

            <!-- Instructor Info -->
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Instructor</h4>
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/img/instructor-placeholder.png" class="rounded-circle me-3" alt="Instructor" width="60" height="60" onerror="this.src='~/img/profile-placeholder.jpg'">
                        <div>
                            <h5 class="mb-0">Dr. Emily Johnson</h5>
                            <p class="text-muted mb-0">Professor of Computer Science</p>
                        </div>
                    </div>
                    <p>Dr. Johnson has over 15 years of experience in the field and has taught at leading universities around the world.</p>
                </div>
            </div>

            <!-- Related Courses -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Related Courses</h4>
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Details", "Course", new { id = 1 })" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Advanced Topics</h6>
                                <small class="text-muted">12 weeks</small>
                            </div>
                            <p class="mb-1">Take your knowledge to the next level with this advanced course.</p>
                        </a>
                        <a href="@Url.Action("Details", "Course", new { id = 2 })" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Practical Workshop</h6>
                                <small class="text-muted">4 weeks</small>
                            </div>
                            <p class="mb-1">Hands-on practice with real-world projects and applications.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>