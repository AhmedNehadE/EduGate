@model EduGate.Models.Student
@{
    ViewData["Title"] = "Register as Student";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Register as Student</h2>

    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Full Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn w-100" style="background-color: #003049; color: #FCBF49;">Sign Up</button>
    </form>

    <div class="mt-3 text-center">
        <p>Want to teach?</p>
        <a asp-controller="Account" asp-action="RegisterTeacher" class="btn btn-outline-success">Become a Teacher</a>
    </div>
</div>
