@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Sign In</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>

        <button type="submit" class="btn w-100" style="background-color: #FCBF49; color: #003049;">Sign In</button>
    </form>

    <div class="mt-3 text-center">
        <p>Don't have an account?</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary me-2">Register as Student</a>
        <a asp-controller="Account" asp-action="RegisterTeacher" class="btn btn-outline-success">Become a Teacher</a>
    </div>
</div>
